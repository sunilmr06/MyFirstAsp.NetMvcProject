@model EmployeeModelViewUI.Models.EmployeViewModel

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container mt-4">
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="mb-3">Employee Information</h4>
                    <dl class="row">
                        <dt class="col-sm-4">Employee ID</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EmployeeId)</dd>

                        <dt class="col-sm-4">Employee Code</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EmpCode)</dd>

                        <dt class="col-sm-4">First Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Firstname)</dd>

                        <dt class="col-sm-4">Last Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Lastname)</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4">Contact Number</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Contact)</dd>
                    </dl>

                    <!-- Action Buttons -->
                    <div class="mt-3">
                        <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary ms-2">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
}
