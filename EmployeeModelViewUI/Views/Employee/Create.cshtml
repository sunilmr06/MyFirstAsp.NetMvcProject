@model EmployeeModelViewUI.Models.EmployeViewModel

@{
    ViewData["Title"] = "Create Employee";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h3>@ViewData["Title"]</h3>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="EmployeeId" />

                        <!-- Row 1: Employee Code & Department -->
                        <div>
                            <div class="col-md-12 mb-6"> 
                                <label asp-for="EmpCode" class="form-label">Employee Code</label> 
                            <input asp-for="EmpCode" class="form-control" /> 
                            <span asp-validation-for="EmpCode" class="text-danger"></span> 
                            @* </div>  *@
                        </div>

                        <!-- Row 2: First Name & Last Name -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Firstname" class="form-label">First Name</label>
                                <input asp-for="Firstname" class="form-control" />
                                <span asp-validation-for="Firstname" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Lastname" class="form-label">Last Name</label>
                                <input asp-for="Lastname" class="form-control" />
                                <span asp-validation-for="Lastname" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Row 3: Email & Contact -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" type="email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Contact" class="form-label">Contact Number</label>
                                <input asp-for="Contact" class="form-control" />
                                <span asp-validation-for="Contact" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DesignationId" class="form-label">Designation</label>
                                <select asp-for="DesignationId" class="form-control" asp-items="@ViewBag.DesignationList">
                                    <option value="">-- Select Designation --</option>
                                </select>
                                <span asp-validation-for="DepartmentId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DepartmentId" class="form-label">Department</label>
                                <select asp-for="DepartmentId" class="form-control" asp-items="@ViewBag.DepartmentList">
                                    <option value="">-- Select Department --</option>
                                </select>
                                <span asp-validation-for="DepartmentId" class="text-danger"></span>
                            </div>
                        </div>
                        </div>

                        <!-- Submit & Back Buttons (Aligned Left) -->
                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create
                            </button>
                            <a asp-action="Index" class="btn btn-secondary ms-2">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
}

