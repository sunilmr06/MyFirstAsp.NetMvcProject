@model EmployeeModelViewUI.Models.EmployeViewModel

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-4">
   
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="text-center text-warning">Are you sure you want to delete this employee?</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Employee ID</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EmployeeId)</dd>

                        <dt class="col-sm-4">Employee Code</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EmpCode)</dd>

                        <dt class="col-sm-4">First Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Firstname)</dd>

                        <dt class="col-sm-4">Last Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Lastname)</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4">Contact Number</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Contact)</dd>
                    </dl>

                    <!-- Delete Confirmation Form -->
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="EmployeeId" />
                        <div class="mt-3">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary ms-2">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
}
